<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3">SingnUp on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="post" novalidate class="needs-validation">
      <div class="md-4">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" class="form-control" required id="username">
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Username Should be valid</div>
      </div>
      <div class="md-4">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" class="form-control" required id="email">
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Email Should be valid</div>
      </div>
      <div class="md-4">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" required id="email">
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Password Should be valid</div>
      </div>
      <button class="btn btn-success mt-3">SingnUp</button>
    </form>
  </div>
</div>