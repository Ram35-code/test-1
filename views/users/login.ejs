<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Login</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post" novalidate class="needs-validation">
      <div class="md-4">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" class="form-control" required id="username">
      </div>

      <div class="md-4">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" required id="email">
      </div>
      <button class="btn btn-success mt-3">Login</button>
    </form>
  </div>
</div>